generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Match {
  matchId Int     @id
  ownerId Int
  owner   Player  @relation(fields: [ownerId], references: [playerId])
  win     Boolean

  teams Team[]
}

model Team {
  teamId  Int      @id
  players Player[]

  Match   Match @relation(fields: [matchId], references: [matchId])
  matchId Int
}

model Player {
  playerId   Int    @id
  name       String
  identifier Int

  matches    Match[]
  Team       Team?   @relation(fields: [teamTeamId], references: [teamId])
  teamTeamId Int?
}
